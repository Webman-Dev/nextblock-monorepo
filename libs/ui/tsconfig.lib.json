{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "composite": true,
    "types": [
      "node",
      "@nx/react/typings/cssmodule.d.ts",
      "@nx/react/typings/image.d.ts"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "../../libs/environment.d.ts",
    "../utils/src/**/*.ts",
    "../utils/src/**/*.tsx"
  ],
  "exclude": [
    "src/**/*.spec.ts",
    "src/**/*.spec.tsx",
    "src/**/*.stories.ts",
    "src/**/*.stories.tsx",
    "vite.config.ts"
  ],
  "references": [
    {
      "path": "../utils/tsconfig.lib.json"
    }
  ]
}
