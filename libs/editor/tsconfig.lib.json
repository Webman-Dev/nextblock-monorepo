{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "composite": true,
    "types": [
      "node",
      "@nx/react/typings/cssmodule.d.ts",
      "@nx/react/typings/image.d.ts",
      "vite/client"
    ]
  },
  "exclude": [
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/*.spec.tsx",
    "**/*.test.tsx",
    "**/*.spec.js",
    "**/*.test.js",
    "**/*.spec.jsx",
    "**/*.test.jsx"
  ],
  "include": [
    "src/**/*.js",
    "src/**/*.jsx",
    "src/**/*.ts",
    "src/**/*.tsx",
    "../ui/src/**/*.ts",
    "../ui/src/**/*.tsx",
    "../utils/src/**/*.ts",
    "../utils/src/**/*.tsx"
  ],
  "references": [
    {
      "path": "../ui/tsconfig.lib.json"
    },
    {
      "path": "../utils/tsconfig.lib.json"
    }
  ]
}
