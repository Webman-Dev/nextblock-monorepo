{
  "name": "db",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/db/src",
  "projectType": "library",
  "tags": [],
  "// targets": "to see all targets run: nx show project db --web",
  "targets": {
    "build": {
      "executor": "@nx/vite:build",
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "outputPath": "dist/libs/db",
        "assets": [
          "libs/db/*.md",
          "libs/db/package.json"
        ]
      }
    },
    "gen-types": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node tools/scripts/gen-db-types.js"
      }
    }
  }
}
