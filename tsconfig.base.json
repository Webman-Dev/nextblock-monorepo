{
  "compileOnSave": false,
  "compilerOptions": {
    "jsx": "react-jsx",
    "module": "esnext",
    "moduleResolution": "bundler",
    "target": "es2022",
    "lib": ["esnext", "dom"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "rootDir": ".",
    "sourceMap": true,
    "composite": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["apps/nextblock/*"],
      "@nextblock-monorepo/db": ["libs/db/src/index.ts"],
      "@nextblock-monorepo/db/server": ["libs/db/src/server.ts"],
      "@nextblock/editor": ["libs/editor/src/index.ts"],
      "@nextblock-monorepo/editor/*": ["libs/editor/src/*"],
      "@nextblock-monorepo/ui": ["libs/ui/src/index.ts"],
      "@nextblock-monorepo/ui/*": ["libs/ui/src/lib/*"],
      "@nextblock-monorepo/utils": ["libs/utils/src/index.ts"],
      "@nextblock-monorepo/utils/server": ["libs/utils/src/server.ts"],
      "@nextblock/sdk": ["libs/sdk/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
