{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "composite": true,
    "moduleResolution": "node16",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "node16",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["apps/nextblock/*"],
      "@nextblock-monorepo/db": ["libs/db/src/index.ts"],
      "@nextblock-monorepo/db/server": ["libs/db/src/server.ts"],
      "@nextblock-monorepo/editor": ["libs/editor/src/index.ts"],
      "@nextblock-monorepo/ui": ["libs/ui/src/index.ts"],
      "@nextblock-monorepo/ui/*": ["libs/ui/src/lib/*"],
      "@nextblock-monorepo/utils": ["libs/utils/src/index.ts"],
      "@nextblock-monorepo/utils/server": ["libs/utils/src/server.ts"],
      "@nextblock/sdk": ["libs/sdk/src/index.ts"]
    }
  },
  "include": ["libs/environment.d.ts", "libs/utils/src/**/*.ts", "libs/utils/src/**/*.tsx"],
  "exclude": ["node_modules", "tmp"]
}
